	</dependency>
	<dependency>
		<groupId>ibm.ilog</groupId>
		<artifactId>cplex</artifactId>
		<version>12.7.1</version>
	</dependency>
	<dependency>
		<groupId>ibm.ilog</groupId>
		<artifactId>cp</artifactId>
